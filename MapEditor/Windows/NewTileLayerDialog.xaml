<Window x:Class="MapEditor.Windows.NewTileLayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewLayerDialog" Height="200" Width="300">

    <Window.Resources>
        <ResourceDictionary Source="C:\Users\VoidBab\Gits\mapeditor\MapEditor\MapEditor\Themes\ExpressionDark.xaml"/>
    </Window.Resources>

    <Grid Margin="5" Background="{StaticResource ControlBackgroundBrush}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource NormalBrush}" Margin="-5" Grid.RowSpan="5" Grid.ColumnSpan="2"/>

        <TextBlock Text="Name: " VerticalAlignment="Center" Foreground="White" Grid.Row="0"/>
        <TextBox Grid.Column="1" Margin="0, 1, 0, 0" Grid.Row="0"/>

        <TextBlock Text="Width: " VerticalAlignment="Center" Foreground="White" Grid.Row="1"/>
        <TextBox Grid.Column="1" Margin="0, 1, 0, 0" Grid.Row="1"/>

        <TextBlock Text="Height: " VerticalAlignment="Center" Foreground="White" Grid.Row="2"/>
        <TextBox Grid.Column="1" Margin="0, 1, 0, 0" Grid.Row="2"/>
    </Grid>
</Window>
